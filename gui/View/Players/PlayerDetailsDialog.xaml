<Window x:Class="PlayerInput.View.Players.PlayerDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="1600" Height="1200" WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        Background="{StaticResource PrimaryBrush}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="White" BorderThickness="2" Padding="10" Margin="10">
            <StackPanel>
                <TextBlock Text="{Binding Name}" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Cities:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CitiesCount}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,0,0,0">
                        <Button Content="-1" Command="{Binding DecreaseCitiesCommand}" Width="200"/>
                        <Button Content="+1" Command="{Binding IncreaseCitiesCommand}" Width="200"/>
                    </StackPanel>

                    <TextBlock Text="IsBureaucrat:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding IsBureaucrat}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,0,0,0">
                        <Button Content="Toggle" Command="{Binding ToggleBureaucratCommand}" Width="200"/>
                    </StackPanel>

                    <TextBlock Text="Rank:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Rank}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </Border>
        <Border BorderBrush="White" BorderThickness="2" Padding="10" Margin="10" Grid.Row="1">
            <StackPanel HorizontalAlignment="Left">
                <ItemsControl ItemsSource="{Binding CardImages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="1" BorderBrush="Gray" Margin="5" Padding="5">
                                <StackPanel  Orientation="Horizontal">
                                    <Image Source="{Binding Image}" Width="300" Height="300" Stretch="UniformToFill"/>
                                    <Button Content="Remove"
                                        Command="{Binding DataContext.RemoveCardCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Width="200"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <Border BorderBrush="White" BorderThickness="2" Padding="10" Margin="10" Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding ScannedCardImage}"
                    Width="300" Height="300"
                    Stretch="Uniform"/>
                <Button Content="Add"
                    Command="{Binding DataContext.AddCardCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding}"
                    Width="200"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>