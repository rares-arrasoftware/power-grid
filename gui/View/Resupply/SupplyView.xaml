<UserControl x:Class="PlayerInput.View.Resupply.SupplyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayerInput.View.Resupply">

    <Border Margin="5">
        <Grid Background="{StaticResource SecondaryBrush}" Margin="5" Width="120">
            <TextBlock Text="{Binding SupplyValue}" Style="{Binding TextBlockStyle}"/>
        </Grid>
    </Border>

</UserControl>
