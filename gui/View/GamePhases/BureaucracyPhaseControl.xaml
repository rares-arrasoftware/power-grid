<UserControl x:Class="PlayerInput.View.GamePhases.BureaucracyPhaseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PlayerInput.ViewModel.GamePhases">

    <UserControl.DataContext>
        <vm:BureaucracyViewModel/>
    </UserControl.DataContext>

    <Border Margin="5">
        <Grid>
            <TextBlock Text="Bureaucracy Phase"
                   HorizontalAlignment="Center" />

            <Button Content="Start Round"
                Width="300" Height="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding StartRoundCommand}"/>
        </Grid>
    </Border>

</UserControl>
