<UserControl x:Class="PlayerInput.View.Market.MarketPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:market="clr-namespace:PlayerInput.View.Market"
             xmlns:vm="clr-namespace:PlayerInput.ViewModel.Market">

    <UserControl.DataContext>
        <vm:MarketViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ImageBrush x:Key="MarketBackground" ImageSource="../../Assets/Images/market.png"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource MarketBackground}">
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Reload" Command="{Binding ReloadCommand}" />
            </ContextMenu>
        </Grid.ContextMenu>

        <ItemsControl ItemsSource="{Binding PricePanels}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <market:PricePanelView />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
